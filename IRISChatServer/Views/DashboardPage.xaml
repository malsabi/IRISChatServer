<Page x:Class="IRISChatServer.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:IRISChatServer.ViewModels"
      d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
      d:DesignHeight="1000" d:DesignWidth="1340"
      mc:Ignorable="d"
      Title="ServerManagementPage"
      ShowsNavigationUI="False">

    <ScrollViewer Background="#1F1E2E"
                  Style="{DynamicResource CustomItemsControlScrollViewerStyle}"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  CanContentScroll="True">
        
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>


            <DockPanel Grid.Row="0"
                       Background="Transparent"
                       Margin="0, 0, 0, 0"
                       LastChildFill="False">

                <TextBlock DockPanel.Dock="Left"
                           Text="User Management"
                           Foreground="white"
                           FontSize="22"
                           FontStyle="Normal"
                           HorizontalAlignment="Left"
                           Margin="10, 10, 0, 0"/>

                <Grid DockPanel.Dock="Right"
                      Margin="0, 10, 20, 0"
                      VerticalAlignment="Center">

                    <TextBox x:Name="SearchUsernameTextBox"
                             VerticalContentAlignment="Center"
                             CaretBrush="White"
                             Background="Transparent"
                             Foreground="White"
                             BorderBrush="#838383"
                             BorderThickness="0, 0, 0, 1"
                             FontSize="15"
                             Width="300"
                             Height="35"
                             Margin="0"/>

                    <TextBlock IsHitTestVisible="False"
                               Text="search"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="0, 0, 0, 0"
                               Foreground="#939393"
                               FontSize="15">

                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchUsernameTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </DockPanel>

            <DockPanel Grid.Row="1"
                       Background="#1F1E2E"
                       Margin="0, 50, 0, 0"
                       LastChildFill="False">

                <StackPanel DockPanel.Dock="Top" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">

                    <Border Background="#27283A"
                            BorderBrush="#27283A" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Height="100"
                            Margin="10">

                        <DockPanel Background="Transparent"
                                   LastChildFill="False">

                            <Border DockPanel.Dock="Left"
                                    Background="#04C9B6"
                                    BorderBrush="#04C9B6"
                                    BorderThickness="1"
                                    CornerRadius="180"
                                    VerticalAlignment="Center"
                                    Margin="20, 0, 0, 0"
                                    Padding="10">
                                <Image 
                                       Source="/Assets/User.png"
                                       Height="24"
                                       Margin="0"/>
                            </Border>


                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Height="50"
                                        Margin="20, 5, 20, 5">

                                <TextBlock Text="Registered Users"
                                           Foreground="#848597"
                                           FontSize="15"
                                           Margin="0, 0, 0, 0"/>

                                <TextBlock Text="125"
                                           Foreground="White"
                                           FontSize="17"
                                           FontWeight="SemiBold"
                                           TextAlignment="Right"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <Border Background="#27283A"
                            BorderBrush="#27283A" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Height="100"
                            Margin="10">

                        <DockPanel Background="Transparent"
                                   LastChildFill="False">

                            <Border DockPanel.Dock="Left"
                                    Background="#28a745"
                                    BorderBrush="#28a745"
                                    BorderThickness="1"
                                    CornerRadius="180"
                                    VerticalAlignment="Center"
                                    Margin="20, 0, 0, 0"
                                    Padding="10">
                                <Image 
                                       Source="/Assets/OnlineUser.png"
                                       Height="24"
                                       Margin="0"/>
                            </Border>


                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Height="50"
                                        Margin="20, 5, 20, 5">

                                <TextBlock Text="Online Users"
                                           Foreground="#848597"
                                           FontSize="15"
                                           Margin="0, 0, 0, 0"/>

                                <TextBlock Text="100"
                                           Foreground="White"
                                           FontSize="17"
                                           FontWeight="SemiBold"
                                           TextAlignment="Right"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <Border Background="#27283A"
                            BorderBrush="#27283A" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Height="100"
                            Margin="10">

                        <DockPanel Background="Transparent"
                                   LastChildFill="False">

                            <Border DockPanel.Dock="Left"
                                    Background="#dc3545"
                                    BorderBrush="#dc3545"
                                    BorderThickness="1"
                                    CornerRadius="180"
                                    VerticalAlignment="Center"
                                    Margin="20, 0, 0, 0"
                                    Padding="10">
                                <Image 
                                       Source="/Assets/OfflineUser.png"
                                       Height="24"
                                       Margin="0"/>
                            </Border>


                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Height="50"
                                        Margin="20, 5, 20, 5">

                                <TextBlock Text="Offline Users"
                                           Foreground="#848597"
                                           FontSize="15"
                                           Margin="0, 0, 0, 0"/>

                                <TextBlock Text="25"
                                           Foreground="White"
                                           FontSize="17"
                                           FontWeight="SemiBold"
                                           TextAlignment="Right"/>
                            </StackPanel>
                        </DockPanel>
                    </Border>

                    <Border Background="#27283A"
                            BorderBrush="#27283A" 
                            BorderThickness="1" 
                            CornerRadius="5"
                            Height="100"
                            Margin="10">

                        <DockPanel Background="Transparent"
                                   LastChildFill="False">

                            <Border DockPanel.Dock="Left"
                                    Background="#1EC9FF"
                                    BorderBrush="#1EC9FF"
                                    BorderThickness="1"
                                    CornerRadius="180"
                                    VerticalAlignment="Center"
                                    Margin="20, 0, 0, 0"
                                    Padding="10">
                                <Image 
                                       Source="/Assets/VerifiedUser.png"
                                       Height="24"
                                       Margin="0"/>
                            </Border>


                            <StackPanel DockPanel.Dock="Right"
                                        Orientation="Vertical"
                                        VerticalAlignment="Center"
                                        Height="50"
                                        Margin="20, 5, 20, 5">

                                <TextBlock Text="Verified Users"
